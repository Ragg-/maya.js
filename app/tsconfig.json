{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "allowJs": true,
        "target": "es2017",
        "module": "commonjs",
        "jsx": "react",
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "es2016",
            "es2017"
        ],
        "paths": {
            "@models/*": ["./app/models/*"],
            "@views/*": ["./app/views/*"]
        }
    },
    "include": [
        "./app/**/*"
    ]
}
