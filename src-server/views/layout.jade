doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        title= title
        style.
            * {
                box-sizing: border-box;
            }
            html, body {
                margin: 0;
                padding: 0;
                
                font-size: 18px;
                font-family: "游ゴシック体", "Yu Gothic", YuGothic, "ヒラギノ角ゴ Pro", "Hiragino Kaku Gothic Pro", "メイリオ", "Meiryo", sans-serif;
            }
            header {
                position: relative;
                padding: 16px 16px 24px;
                margin-bottom: 20px;

                font-family: "Trebuchet MS", sans-serif;
                line-height: 1;

                color: #fff;
                background-color: #004452;
            }
            header::after {
                content: "";

                position: absolute;
                top: 100%;
                left: 0;

                display: block;
                width: 100%;
                height: 20px;
                margin-top: -1px;

                background: url("data:image/svg+xml;base64,PHN2ZyB4bWxucz0naHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmcnIHdpZHRoPSc1MCcgaGVpZ2h0PScxMCc+PHBvbHlnb24gcG9pbnRzPScwLDAgNTAsMCAyNSwxMCcgc3R5bGU9J2ZpbGw6IzAwNDQ1MjsnIC8+PC9zdmc+") repeat-x;
                background-position: -13px top;
            }
            
            .container {
                padding: 0 32px;
            }
