extends ./layout.jade

block content
    style.
        .error {}
        .error-title {
            font-weight: bold;
        }
        .error-stack {
            list-style: none;
        }
        .error-stack-item {
            margin-bottom: 1em;
            padding-left: 8px;
            border-left: 3px solid #d92121;
            line-height: 1.6;
        }

    .container
        h1 500 // Internal Server Error

        .error
            .error-title= error.title
            ul.error-stack
                each stack in error.stack
                    li.error-stack-item= stack
